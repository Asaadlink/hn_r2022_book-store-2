<div class="container-fluid px-4">
  <h3 class="mt-4"><%= t "my_order" %></h3>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t "address" %></th>
        <th scope="col"><%= t "order_at" %></th>
        <th scope="col"><%= t "status" %></th>
        <th scope="col"><%= t "shiped_date" %></th>
      </tr>
    </thead>
    <tbody>
      <% list_order = Order.get_order(current_user[:id]) %>
      <% if list_order.any? %>
        <% list_order.each do |item| %>
          <%= render partial: "orders/order", locals: {order: item} %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
