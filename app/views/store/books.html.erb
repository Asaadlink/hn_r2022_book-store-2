<div class="container d-flex justify-content-center mt-50 mb-50">
  <div class="row">
    <div class="container-fluid">
      <h3 class="mt-4"><%= t "store.all_product" %></h3>
    </div>

    <% load_book.each do |book| %>
      <div class="col-md-3 mt-2">
        <div class="card">
          <div class="card-body">
            <div class="card-img-actions">
              <% book.images.each do |image| %>
                <%= image_tag image, class: "card-img card-img-height" %>
              <% end %>
            </div>
          </div>
          <div class="card-body bg-light text-center">
            <div class="mb-2">
              <h6 class="font-weight-bold mb-2"><%= link_to book.name, book_path(book.id) %></h6> 
              <a href="#" class="text-muted" data-abc="true"><%= book.category_name %></a>
            </div>
            <h4 class="mb-0 pb-2 font-weight-semibold"><%= price_format book.price %></h4>
            <button type="button" class="btn btn-primary"><i class="fa fa-cart-plus mr-2"></i> <%= t "store.add_to_cart" %></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
