<div class="container">
  <div class="row">
    <div class="container-fluid">
      <h3 class="mt-4"><%= t "check_out" %></h3>
    </div>
    <% if @cart %>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered m-0">
            <thead class="bg-dark text-center text-white">
              <tr>
                <th class="py-3 px-2 col-6"><%= t "product" %></th>
                <th class="py-3 px-2 col-2"><%= t "price" %></th>
                <th class="py-3 px-2 col-2"><%= t "quantity" %></th>
                <th class="py-3 px-2 col-2"><%= t "total" %></th>
              </tr>
            </thead>

            <tbody class="text-center">
              <% @cart.each do |item| %>
                <%= render partial: "checkout/checkout", locals: {cart: item} %>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="d-flex flex-wrap justify-content-between mt-4">
          <div class="d-flex pr-5">
            <div class="text-left">
              <label class="text font-weight-bold m-0"><%= t "total" %></label>
              <div class="text-large">
                <h3><%= price_format(total_price()) %></h3>
              </div>
            </div>
          </div>

          <div class="flex-fill pl-5">
            <h5 class="font-weight-bold"><%= t "delivery_info" %></h5>
            <%= render partial: "checkout/form", locals: {cart: @cart} %>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>
